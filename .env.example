# =========================================
# OpenRouter API (единый провайдер для всех LLM задач)
# =========================================
# Получите ключ на https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here

# Модели для каждой задачи (OpenRouter)
# RSS Collector — быстрая модель для парсинга и фильтрации
RSS_MODEL_NAME=stepfun/step-3.5-flash:free

# Sonar Scanner — модель для анализа новостей
# Использует Perplexity Sonar через OpenRouter
SONAR_MODEL_NAME=perplexity/sonar

# Trend Selector — модель для кластеризации и анализа трендов
TREND_MODEL_NAME=stepfun/step-3.5-flash:free

# Bob Copywriter — креативная модель для генерации постов
COPYWRITER_MODEL_NAME=openai/gpt-4o-mini

# Cover Generator — модель для создания visual prompt
COVER_MODEL_NAME=bytedance-seed/seedream-4.5

# =========================================
# Google API (полный доступ: Gmail + Google Drive + Google Sheets)
# =========================================
# Метод авторизации: oauth (OAuth 2.0) или service_account
GOOGLE_AUTH_METHOD=oauth

# Путь к файлу credentials
# Для OAuth 2.0: credentials.json (OAuth 2.0 Client ID)
# Для сервисного аккаунта: JSON ключ сервисного аккаунта
GOOGLE_CREDENTIALS_PATH=credentials.json

# Путь к файлу токена (только для OAuth 2.0)
# Сохраняется после первой авторизации
GOOGLE_TOKEN_PATH=token.json

# Email сервисного аккаунта (для service_account)
GOOGLE_SERVICE_ACCOUNT_EMAIL=

# Ваш личный email — для делегирования
# Сервисный аккаунт/OAuth будет действовать от вашего имени
GOOGLE_DELEGATED_EMAIL=your-email@gmail.com

# ID Google Таблицы для хранения данных (NewsRaw, Texts)
# Создайте таблицу и предоставьте доступ
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# ID папки на Google Диске для хранения обложек (опционально)
# Если не указано, обложки сохраняются локально в data/
GOOGLE_DRIVE_FOLDER_ID=

# =========================================
# RSS Collector (Агент 1)
# =========================================
# URL RSS фидов (через запятую, минимум 5)
RSS_URLS=https://example.com/rss1,https://example.com/rss2,https://example.com/rss3,https://example.com/rss4,https://example.com/rss5

# Ключевые слова для фильтрации новостей (через запятую)
KEYWORDS=AI,artificial intelligence,automation,machine learning,LLM,neural network,deep learning

# =========================================
# Perplexity Sonar Scanner (Агент 2)
# =========================================
# Опционально: если используете Perplexity API напрямую
# Если не указано — используется OpenRouter с поистом
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Бренды для мониторинга (через запятую)
SONAR_BRANDS=OpenAI,Google,Anthropic,Meta,Microsoft,NVIDIA,Apple,Tesla,AI21,Cohere

# =========================================
# Telegram Publisher (Агент 6)
# =========================================
# Токен бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID канала для публикации (получить у @getmyid_bot)
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here

# =========================================
# Image Generation (Агент 5 — Cover Generator)
# =========================================
# Модель для генерации изображений через OpenRouter
# Доступные: dall-e-3, stability/stable-diffusion-xl, и др.
IMAGE_MODEL_NAME=dall-e-3

# Размер обложек (1080x1080, 1024x1024, 1792x1024)
IMAGE_SIZE=1080x1080

# =========================================
# Логирование и отладка
# =========================================
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Сохранять логи в файлы (True/False)
LOG_TO_FILE=True

# =========================================
# Планировщик (Orchestrator)
# =========================================
# Часовой пояс для расписания
SCHEDULER_TIMEZONE=Europe/Samara

# Время ежедневного запуска (часы:минуты)
DAILY_RUN_HOUR=9
DAILY_RUN_MINUTE=30

# =========================================
# Дополнительные настройки
# =========================================
# Количество трендов для выбора (рекомендуется 5)
TOP_TRENDS_COUNT=5

# Количество постов для генерации (рекомендуется 4 из 5 трендов)
POSTS_COUNT=4

# Максимальная длина поста (символов)
MAX_POST_LENGTH=800

# Минимальная длина поста (символов)
MIN_POST_LENGTH=600

# Статус по умолчанию для новых постов (draft/approved)
DEFAULT_POST_STATUS=draft

# Автоматически одобрять посты (True/False)
# Если True — посты сразу публикуются без ручной проверки
AUTO_APPROVE_POSTES=False
